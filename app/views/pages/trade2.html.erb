
<div class="passwordBox animated fadeInDown">
    <div class="row">

        <div class="col-md-12">
            
            <div class="ibox">
            
                <div class="ibox-title">
                    <h5>Trade</h5>
                </div>          
          
                <div class="ibox-content">

                    <p>
                        Choose which Tokens to trade
                    </p>

                    <div class="row">                
                        <div class="col-lg-12">
                            <form class="m-t" role="form" action="#">                                                    
                                <div class="row" style="text-align:center;">
                                    <div class="col-xs-5">                                                                               <div id="depositCoin">
                                        <p><strong>Deposit</strong></p>                           
                                        <p class="deposit-img">
                                          <a href="#" data-toggle="modal" data-target="#myModal"><img src="/assets/bitcoin.png" style="width:50px;"></a>
                                        </p>
                                        <p class="deposit-name"><strong>BTC</strong></p>
                                      </div>    
                                    </div>
                                    <div class="col-xs-2">
                                        <br/>                                       
                                        <span class="" style="font-size:50px;"><i class="fa fa-arrows-h"></i></span>
                                    </div>
                                    <div class="col-xs-5">
                                      <!-- <span class="label label-info b-r-xl" style="font-size:40px;border-radius:40px;padding:6px 22px;">CM3</span>     -->                     
                                      <div id="receiveCoin">
                                        <p><strong>Receive</strong></p>                           
                                        <p class="receive-img">
                                            <a href="#" data-toggle="modal" data-target="#myModal2"><img src="/assets/cm3_logo_1.png"></a>
                                        </p>
                                        <p class="receive-name"><strong>CM3</strong></p>
                                      </div>                                                         
                                    </div>
                                </div>   
                                
                                <br/> 

                                <button type="submit" class="btn btn-primary block full-width m-b">Submit</button>

                            </form>
                        </div>
                        
                    </div>
                
            </div>
        </div>
    </div>
    <hr />
