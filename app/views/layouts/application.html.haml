  %body.top-navigation
    = render 'layouts/shared/top_navbar'
    / Wrapper
    #wrapper
      / Main view
      - if flash[:notice].present?
        .alert.alert-danger
          = flash[:notice]
      .alert.alert-danger.text-center
        WORK IN PROGRESS!
        %br
        %b
          This wallet is still in development. Minor bugs might appear.
          %br
          Please use this wallet for testing purpose only.
      #layout-alert.alert.alert-danger
      .pace
      = yield
    / Footer
    %footer.footer
      .container
        %strong
