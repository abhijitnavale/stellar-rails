    #wrapper
      / Page wraper
      #page-wrapper{:class => "gray-bg #{@extra_class}"}
        / Page wrapper
        = render 'layouts/shared/top_navbar'
        / Main view
        - if flash[:notice].present?
          .alert.alert-danger
            = flash[:notice]
        = yield
        / Footer
        .footer
          .pull-right
            Cryptomover
