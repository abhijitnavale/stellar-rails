.card
  .card-header
    %h1 Send Lumens/Assets
    %br
    From Account
    %br
    .address
      = session[:address]
      .card-body
    = render partial: "shared/transfer_assets_form"

%script{src: "https://cdnjs.cloudflare.com/ajax/libs/stellar-sdk/0.8.0/stellar-sdk.min.js"}

:javascript  
  $("input[name=memotype]").click(function() {
    $("#memo").prop("disabled", false)
  })
  
  function hide_form_controls() {
    $("#secret-seed").prop("disabled", true)
    $("#target-account").prop("disabled", true)
    $("#amount-to-send").prop("disabled", true)
    $("#asset-type").prop("disabled", true)
    $("input[name=memotype]").attr("disabled", "disabled")
    $("input[name=fund-new]").attr("disabled", "disabled")
    $("#memo").prop("disabled", true)
    $("#send_money").hide()
    $("#cancel-btn").hide()
  }

  $('#send_money').click(function(event) {
    hide_form_controls()
    progressbar()
    
    if ($("#fund-new-chk").is(":checked")) {
      console.log("selected")
      fund_new_account()
    } else {
      console.log("not selected")
      send_money()
    }
    
  }) // btn click end
